[run]
branch = True
source =
    firsttry
    licensing/app
    tools/firsttry/tests
omit =
    */site-packages/*
    tools/firsttry/firsttry/runners.py
    tools/firsttry/firsttry/*
    firsttry/runners.py
    firsttry/__main__.py
    # Legacy/compatibility modules
    src/firsttry/legacy_*.py
    # VSCode extension scaffolding
    src/firsttry/vscode_*.py
    # Docker smoke tests (often not run in CI)
    src/firsttry/docker_*.py
    # Database modules (optional dependencies)
    src/firsttry/db_*.py

[report]
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:    
    # defensive license checks etc.
    raise NotImplementedError
precision = 1
