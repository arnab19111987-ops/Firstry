#!/usr/bin/env bash
set -euo pipefail

echo "[pre-push] Repo smoke (src)…"
PYTHONPATH=src python -m pytest -q -k "config_compat or no_alias_in_repo" tests

echo "[pre-push] Tooling smoke (tools)…"
PYTHONPATH=tools python -m pytest -q -k "import_resolution or no_site_packages_collision" tools/firsttry

echo "[pre-push] OK (full suites run in CI)"
